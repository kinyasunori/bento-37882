<main class="main">
  <div class="main-area">
    <div class="inner">
      <div class="post__wrapper">
        <p class="post__hedding">
          <%= @post.title%>
        </p>
        <%= link_to "by #{current_user.nickname}", post_path(@post.user), class: :post__user %>
      
        <div class="post__manage">
          <% if user_signed_in? && current_user.id == @post.user_id %>
            <%= link_to "編集する", edit_post_path, class: :post__btn %>
            <%= link_to "削除する", root_path, class: :post__btn %>
          <% end %>
        </div>
      
        <div class="post__image">
          <%= image_tag @post.image %>
        </div>
        <div class="post__body">
          <div class="post__detail">
            <p class="detail__title">メニュー</p>
            <p class="detail__message">
              <%= @post.menu %>
            </p>
          </div>
          <div class="post__detail">
            <p class="detail__title">レシピ（ツイート）</p>
            <p class="detail__message">
              <%= @post.recipe %>
            </p>
          </div>
        </div>
        <div class="post__comments">
          <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
            <%# <%= form_with model: モデル名,local: true do |f|%>
